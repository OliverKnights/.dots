# auto ls after cd
cd () {
  builtin cd "$@" && ls --color=auto -F
}

# Convert a given manpage to pdf
man-to-pdf () {
  if ! hash pandoc 2>/dev/null; then
    echo "Please install pandoc"
    return
  fi

  man -Thtml "$1" > "/tmp/$1.html"; pandoc --latex-engine=xelatex "/tmp/$1.html" -o "$1.pdf"
}

